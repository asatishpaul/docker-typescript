{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./"  // Change this to the root folder containing both src and tests
  },
  "include": ["src/**/*", "tests/**/*"],  // Ensure both src and tests are included
  "exclude": ["node_modules"]
}
